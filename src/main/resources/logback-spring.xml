<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{HH:mm:ss.SSS} %t [%-5level] %logger{36} - %msg%n
            </Pattern>
        </layout>
    </appender>
    <logger name="com.github.cpickl.bookstore" level="all" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    <logger name="com.github.cpickl.bookstore.boundary.JWTAuthenticationFilter" level="debug" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    <root level="warn">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>